<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_marginStart="30dp"
    android:layout_marginEnd="30dp">

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_party"
        android:layout_gravity="center"
        android:layout_marginTop="25dp"/>
    <!--    <TextView-->
    <!--        android:id="@+id/textView7"-->
    <!--        android:layout_width="match_parent"-->
    <!--        android:layout_height="wrap_content"-->
    <!--        android:text="@string/party_smiley"-->
    <!--        android:textAlignment="center"-->
    <!--        android:layout_marginTop="25dp"-->
    <!--        android:textSize="40sp"-->
    <!--        />-->

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/interr"
        android:text="@string/signin_welcome_back"
        android:textAlignment="center"
        android:textColor="@color/textMain"
        android:textSize="24sp"
        android:textStyle="bold"
        />

    <TextView
        android:layout_marginTop="15dp"
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Log in with..."
        android:textAlignment="center"
        android:fontFamily="@font/interr"
        android:textColor="@color/textSecondary"
        />

    <com.google.android.material.button.MaterialButton
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:fontFamily="@font/interr"
        android:text="Email"
        android:textAllCaps="false"
        app:icon="@drawable/ic_email_pretty"
        app:iconGravity="textStart"
        app:iconSize="17dp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        app:cornerRadius="30dp"
        android:backgroundTint="@color/primaryGreen"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:text="Or continue with..."
        android:textAlignment="center"
        android:fontFamily="@font/interr"
        android:textColor="@color/textSecondary"
        android:textSize="13sp"/>

    <com.google.android.material.button.MaterialButton
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:fontFamily="@font/interr"
        android:text="Google"
        android:textAllCaps="false"
        app:icon="@drawable/ic_google"
        app:iconGravity="textStart"
        app:iconSize="17dp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_marginTop="6dp"
        app:cornerRadius="30dp"
        android:backgroundTint="@color/google"/>

    <com.google.android.material.button.MaterialButton
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:fontFamily="@font/interr"
        android:text="Facebook"
        android:textAllCaps="false"
        app:icon="@drawable/ic_facebook_2"
        app:iconGravity="textStart"
        app:iconSize="17dp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_marginTop="6dp"
        app:cornerRadius="30dp"
        android:backgroundTint="#4267B2"/>

    <com.google.android.material.button.MaterialButton
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:fontFamily="@font/interr"
        android:text="Twitter"
        android:textAllCaps="false"
        app:icon="@drawable/ic_twitter_2"
        app:iconGravity="textStart"
        app:iconSize="17dp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_marginTop="6dp"
        app:cornerRadius="30dp"
        android:backgroundTint="#1DA1F2"/>

    <com.google.android.material.button.MaterialButton
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:fontFamily="@font/interr"
        android:text="Instagram"
        android:textAllCaps="false"
        app:icon="@drawable/ic_instagram_2"
        app:iconGravity="textStart"
        app:iconSize="17dp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_marginTop="6dp"
        app:cornerRadius="30dp"
        android:backgroundTint="#DE1B85"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/interr"
                android:text="Don't have an account?"
                android:textAlignment="center"
                android:textColor="@color/textMain"
                android:layout_marginEnd="10dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/interr"
                android:text="Sign Up"
                android:textAlignment="center"
                android:textColor="@color/primaryGreen"
                android:textStyle="bold" />

        </LinearLayout>
    </LinearLayout>

