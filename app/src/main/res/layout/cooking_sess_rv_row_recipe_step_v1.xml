<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/containerCookingSessStepCard"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        app:cardCornerRadius="15dp"
        android:layout_marginTop="15dp"
        app:cardElevation="0dp"
        app:strokeWidth="3dp"
        android:backgroundTint="@color/form"
        app:strokeColor="@color/primaryGreen">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/llCookingSessStepAndCheckContainer3"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:translationZ="2dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">
                <TextView
                    android:id="@+id/tvCookingSessStepCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Step 3"
                    android:textColor="@color/textMain"
                    android:fontFamily="@font/interr"
                    android:textSize="20sp"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/tvCookingSessMaxSteps"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="/ 7"
                    android:fontFamily="@font/interr"
                    android:textColor="@color/textSecondary"
                    android:textSize="14sp"
                    android:layout_marginStart="7dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:translationZ="1dp"
                app:layout_constraintTop_toBottomOf="@id/llCookingSessStepAndCheckContainer3"
                app:layout_constraintStart_toStartOf="parent">
<!--                <com.google.android.material.card.MaterialCardView-->
<!--                    android:id="@+id/cardCookingSessStepType"-->
<!--                    android:layout_marginStart="10dp"-->
<!--                    android:layout_marginTop="6dp"-->
<!--                    android:layout_width="wrap_content"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    app:cardCornerRadius="15dp"-->
<!--                    android:backgroundTint="@color/white"-->
<!--                    android:elevation="0dp"-->
<!--                    app:strokeWidth="1dp"-->
<!--                    app:strokeColor="@color/textSecondary"-->
<!--                    android:outlineSpotShadowColor="@color/transparent">-->

<!--                    <TextView-->
<!--                        android:id="@+id/tvCookingSessStepType"-->
<!--                        android:layout_width="wrap_content"-->
<!--                        android:layout_height="wrap_content"-->
<!--                        android:layout_marginStart="5dp"-->
<!--                        android:layout_marginTop="2dp"-->
<!--                        android:layout_marginEnd="5dp"-->
<!--                        android:layout_marginBottom="2dp"-->
<!--                        android:fontFamily="@font/interr"-->
<!--                        android:text="Cooking"-->
<!--                        android:textColor="@color/textSecondary"-->
<!--                        android:textSize="11sp" />-->
<!--                </com.google.android.material.card.MaterialCardView>-->
                <ImageView
                    android:id="@+id/ivCookingSessStepCheck"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_check_inactive"
                    android:scaleType="fitEnd"
                    android:layout_marginEnd="15dp"/>
            </LinearLayout>

            <ProgressBar
                android:id="@+id/pbCookingSessStepPB"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:translationZ="0dp"
                android:progress="30"
                android:progressTint="#D5F4E5"
                android:progressBackgroundTint="@color/form"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:scaleY="40"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>
</LinearLayout>