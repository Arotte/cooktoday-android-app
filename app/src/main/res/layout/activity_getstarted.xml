<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".onboarding.OnBoardingActivity">


    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/inter_bold"
        android:text="CookToday"
        android:translationZ="5dp"
        android:textAlignment="center"
        android:textColor="@color/textMain"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_marginTop="50dp"/>

    <TextView
        android:id="@+id/textView2"
        android:translationZ="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/interr"
        android:text="Deliciously Simple."
        android:textAlignment="center"
        android:textColor="@color/textMain"
        app:layout_constraintTop_toBottomOf="@id/textView"
        android:textSize="16sp"
        />


    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_onboarding_letsgo"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginBottom="40dp"
        android:backgroundTint="@color/primaryGreen"
        android:checkable="false"
        android:elegantTextHeight="false"
        android:fontFamily="@font/interr"
        android:hapticFeedbackEnabled="true"
        android:stateListAnimator="@null"
        android:text="Start Cooking"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        app:cornerRadius="30dp"
        app:icon="@drawable/ic_arrow___right_2"
        app:iconGravity="textEnd"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        app:rippleColor="@color/black"/>

    <ImageView
        android:id="@+id/imageView"
        android:translationZ="0dp"
        android:elevation="0dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/img_onboardingg" />

</androidx.constraintlayout.widget.ConstraintLayout>