<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.abdn.cooktoday.onboarding.OnBoardingActivity">


    <TextView
        android:id="@+id/tvGetStartedTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/inter_bold"
        android:text="CookToday"
        android:translationZ="5dp"
        android:textAlignment="center"
        android:textColor="@color/textMain"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_marginTop="50dp"/>

    <TextView
        android:id="@+id/tvGetStartedSubtitle"
        android:translationZ="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/interr"
        android:text="Smart. Fun. Delicious."
        android:textAlignment="center"
        android:textColor="@color/textMain"
        app:layout_constraintTop_toBottomOf="@id/tvGetStartedTitle"
        android:textSize="16sp"
        />

    <ImageView
        android:id="@+id/ivGetStarted"
        app:layout_constraintTop_toBottomOf="@id/tvGetStartedSubtitle"
        app:layout_constraintBottom_toTopOf="@id/btn_onboarding_letsgo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="30dp"
        android:src="@drawable/svg_ic_undraw_cooking"
        android:scaleType="fitCenter" />


    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_onboarding_letsgo"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginBottom="40dp"
        android:backgroundTint="@color/primaryGreen"
        android:checkable="false"
        android:elegantTextHeight="false"
        android:fontFamily="@font/interr"
        android:hapticFeedbackEnabled="true"
        android:stateListAnimator="@null"
        android:text="Start Cooking"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        app:cornerRadius="30dp"
        app:icon="@drawable/ic_arrow___right_2"
        app:iconGravity="textEnd"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        app:rippleColor="@color/black"/>

</androidx.constraintlayout.widget.ConstraintLayout>